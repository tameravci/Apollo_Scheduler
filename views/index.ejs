<!-- Main HTML file, every other html is called inside here -->
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Apollo</title>
    <!--  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/readable/bootstrap.min.css">
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-ui/build/angular-ui.min.js"></script>
    <script src="/bower_components/angular-cookies/angular-cookies.min.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.min.js"></script>
    <script src="/bower_components/angular-route/angular-route.min.js"></script>
    <script src="/bower_components/ng-dialog/js/ngDialog.min.js"></script>
    <script src="/bower_components/ng-table-to-csv/dist/ng-table-to-csv.min.js"></script>
    <script src="/bower_components/ngDraggable/ngDraggable.js"></script>
    <script src="/bower_components/angular-drop/angular-drop.min.js"></script>
    <!-- file dependencies-->
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/byClassroomCtrl.js"></script>
    <script src="/javascripts/byClassroomsCtrl.js"></script>
    <script src="/javascripts/factories.js"></script>
    <script type="text/javascript">
    angular.element(document.getElementsByTagName('head')).append(angular.element('<base href="' + window.location.pathname + '" />'));
    </script>
</head>

<body ng-app="Apollo" ng-controller="mainCtrl">
    <a style="float:left" href="/#!/" style="display:inline">
        <img ng-src="/images/assets/Logo.png" width="50%" />
    </a>
    <div class="container">
        <!-- make everything except ng-view into navbar -->
        <div style="margin-top:60px" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav nav-pills">
                <li ng-class="getClass('/calendar')" role="presentation" uib-dropdown is-open="status.isopen" class="dropdown">
                    <a id="simple-dropdown" uib-dropdown-toggle>
                        Calendar <span class="caret"></span>
                    </a>
                    <ul class="uib-dropdown-menu" role="menu" aria-labelledby="single-button">
                        <li role="menuitem"><a href="#!/calendarClassrooms">By Classrooms</a></li>
                        <li role="menuitem"><a href="#!/calendarClassroom">By Classroom</a></li>
                        <!--FUTURE DEVELOPMENT <li role="menuitem"><a href="#!/calendarProfessor">By Professor </a></li> -->
                    </ul>
                </li>
                <li role="presentation" ng-class="getClass('/list')"><a href="#!/list">List View</a></li>
                <li role="presentation" ng-class="getClass('/options')"><a href="#!/options">Configuration</a></li>
                <li role="presentation" ng-class="getClass('/help')"><a href="#!/help">Help</a></li>
            </ul>
        </div>
        <!-- padding -->
        <div style="padding: 20px;" ng-view></div ng-view>
    </div>
</body>

</html>